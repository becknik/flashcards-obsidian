# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 100 # I personally think 80 is too short and 128 is too long. Come here and fight me about it.
quote_type = single
trim_trailing_whitespace = true
